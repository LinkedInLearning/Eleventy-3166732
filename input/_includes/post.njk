---
layout: base.njk
---
<div class="col-md-8">
  <h1 class="h2 mt-3">{{title}}</h1>
  <time>
    {{date | postDate}}</time>

  <p class="h4 my-4">{{summary}}</p>
  <img src="/img/{{image}}" class="float-start me-3">

  
  {{ content | safe }}

  {%- if collections.posts %}
    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if nextPost or previousPost %}
      <hr>
      <ul>
        {%- if nextPost %}
          <li>NÃ¤chster Beitrag: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if previousPost %}
          <li>Vorheriger: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}

</div>